<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" android:layout_marginLeft="10dp"
                                   android:layout_marginRight="10dp" android:layout_marginBottom="10dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/nomeAtividade" android:textColor="#3F51B5"
                android:textStyle="bold" android:textAlignment="viewStart" android:text="sample"
                android:layout_marginTop="5dp" android:textSize="20dp" android:layout_marginLeft="3dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/pontuacaoAtividade" android:text="sample"
                android:layout_marginTop="5dp" android:textSize="18dp" android:layout_marginLeft="3dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/avaliadorAtividade" android:text="sample"
                android:layout_marginLeft="3dp" android:layout_marginTop="5dp" android:textSize="18dp"/>
        <TextView
                android:text="sample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/feedbackAtividade" android:textSize="18dp"
                android:layout_marginTop="5dp" android:layout_marginLeft="3dp"/>
        <TextView
                android:text="Clique aqui para ver o Feedback!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/feedbackLink"
                android:textColor="#F44336" android:layout_marginTop="5dp" android:textAlignment="center"
                android:layout_marginBottom="3dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
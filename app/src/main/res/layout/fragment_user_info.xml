<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.UserInfoFragment" android:id="@+id/frameLayout">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="158dp"
                android:layout_height="148dp" tools:src="@tools:sample/avatars" android:id="@+id/userAvatar"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="40dp"/>
        <TextView
                android:text="Nome:"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/emailText"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/userAvatar"
                android:textColor="@android:color/secondary_text_light" android:textSize="18sp"
                android:layout_marginStart="31dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.065" android:textAlignment="textStart"/>
        <TextView
                android:text="sample"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/userNome"
                app:layout_constraintTop_toBottomOf="@+id/emailText"
                android:textStyle="bold"
                android:textSize="24sp" android:textColor="@android:color/secondary_text_dark"
                android:textAlignment="viewStart" android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="31dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"/>
        <TextView
                android:text="sample"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/userEmail"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/nomeText"
                android:textSize="24sp" android:textColor="@android:color/secondary_text_dark"
                android:layout_marginTop="4dp"
                android:textAlignment="viewStart" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="31dp"/>
        <TextView
                android:text="sample"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/userCurso"
                android:textStyle="bold"
                android:textSize="24sp" app:layout_constraintTop_toBottomOf="@+id/cursoText"
                android:textColor="@android:color/secondary_text_dark" android:layout_marginTop="4dp"
                android:textAlignment="viewStart" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="31dp"/>
        <TextView
                android:text="Email:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/nomeText" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.064"
                app:layout_constraintTop_toBottomOf="@+id/userNome"
                android:textColor="@android:color/secondary_text_light" android:textSize="18sp"
                android:layout_marginStart="31dp" android:textAlignment="textStart" android:layout_marginTop="28dp"/>
        <TextView
                android:text="Curso:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/cursoText" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.065"
                android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/userEmail"
                android:textColor="@android:color/secondary_text_light" android:textSize="18sp"
                android:layout_marginStart="31dp" android:textAlignment="textStart"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>